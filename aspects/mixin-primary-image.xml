<?xml version='1.0'?>
<aspect
    xmlns="http://www.crowdfusion.com/schema/aspect"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.crowdfusion.com/schema/aspect http://www.crowdfusion.com/schema/crowdfusion-aspect-2.0.xsd">
    <info>
        <name>Mixin: Crowd Fusion - Has Primary Image</name>
        <description>Given to elements that have a single important media image</description>
        <elementmode>many</elementmode>
    </info>
    <tag_defs>
        <tag quickadd="true" multiple="false" direction="out" fieldlike="true">
            <title>Primary Image</title>
            <partial aspect="@images" role="#primary-image" />
        </tag>
    </tag_defs>
</aspect>