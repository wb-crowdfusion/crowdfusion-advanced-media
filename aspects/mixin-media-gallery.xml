<?xml version='1.0'?>
<aspect
    xmlns="http://www.crowdfusion.com/schema/aspect"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.crowdfusion.com/schema/aspect http://www.crowdfusion.com/schema/crowdfusion-aspect-2.0.xsd">
    <info>
        <name>Mixin: Crowd Fusion - Has Media Gallery</name>
        <description>Given to elements that have an attached gallery of images</description>
        <elementmode>many</elementmode>
    </info>
    <tag_defs>
        <tag quickadd="false" multiple="true" direction="out" fieldlike="true">
            <title>Gallery</title>
            <partial aspect="@galleries" role="#media-gallery" />
        </tag>
    </tag_defs>
</aspect>